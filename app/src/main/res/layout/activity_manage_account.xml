<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data></data>

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <FrameLayout
            android:id="@+id/viewRoot"

            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.CardView
                style="@style/CardViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/txtTitle"
                        style="@style/MyTextTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_5dp"
                        android:text="@string/accounts"
                        android:textAlignment="center"
                        app:layout_constraintBottom_toTopOf="@+id/recycleView"
                        app:layout_constraintTop_toTopOf="parent" />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recycleView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layoutManager="android.support.v7.widget.LinearLayoutManager"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/txtTitle"
                        tools:listitem="@layout/item_wallet"></android.support.v7.widget.RecyclerView>
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </FrameLayout>

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/btnAddAccount"
            style="@style/FloatButtonStyle"
            android:layout_width="@dimen/_50dp"
            android:layout_height="@dimen/_50dp"
            android:elevation="@dimen/_20dp"
            android:src="@drawable/ic_add_1"
            app:fab_colorNormal="@android:color/holo_blue_dark"
            app:fab_colorPressed="@android:color/holo_blue_dark"
            app:fab_colorRipple="@android:color/darker_gray"
            app:fab_size="normal"
            app:layout_anchor="@+id/viewRoot"
            app:layout_anchorGravity="bottom|right"></com.github.clans.fab.FloatingActionButton>
    </android.support.design.widget.CoordinatorLayout>
</layout>