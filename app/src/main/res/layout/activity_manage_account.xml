<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data></data>

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/viewRoot"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/txtTitle"
                style="@style/MyTextTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_5dp"
                android:text="@string/accounts"
                android:textAlignment="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/recycleView"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycleView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layoutManager="android.support.v7.widget.LinearLayoutManager"
                app:layout_constraintTop_toBottomOf="@+id/txtTitle"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:listitem="@layout/item_wallet">
            </android.support.v7.widget.RecyclerView>
        </LinearLayout>

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/btnAddAccount"
            style="@style/FloatButtonStyle"
            app:fab_colorNormal="@android:color/holo_blue_dark"
            app:fab_colorPressed="@android:color/holo_blue_dark"
            app:fab_colorRipple="@android:color/darker_gray"
            app:fab_size="normal"
            android:layout_width="@dimen/_50dp"
            android:layout_height="@dimen/_50dp"
            android:src="@drawable/ic_add_1"
            app:layout_anchor="@+id/viewRoot"
            app:layout_anchorGravity="bottom|right"></com.github.clans.fab.FloatingActionButton>
    </android.support.design.widget.CoordinatorLayout>
</layout>