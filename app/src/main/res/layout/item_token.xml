<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="token"
            type="com.example.dai_pc.android_test.entity.Token"/>

    </data>

<android.support.constraint.ConstraintLayout
    android:id="@+id/constrainLayout"
    android:clickable="true"
    android:paddingLeft="@dimen/_5dp"
    android:paddingRight="@dimen/_5dp"
    android:paddingTop="@dimen/_15dp"
    android:paddingBottom="@dimen/_15dp"
    android:foreground="?attr/selectableItemBackground"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.AppCompatImageView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/icon"
        android:src="@drawable/ethereum"
        android:layout_width="@dimen/_20dp"
        android:layout_height="@dimen/_20dp"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/txtSymbol"
        style="@style/TextAppStyle"
        android:maxLines="1"
        app:layout_constraintLeft_toRightOf="@+id/icon"
        android:layout_marginLeft="@dimen/_10dp"
        android:textSize="@dimen/_18sp"
        tools:text="KAOP"
        android:text="@{token.symbol}"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/txtBalance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/txtBalance"
        style="@style/TextAppStyle"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="@dimen/_10dp"
        tools:text="8888888"
        android:text="@{``+token.balance}"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="@dimen/_15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</android.support.constraint.ConstraintLayout>
</layout>