<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools">

    <data>
        <variable
            name="resource"
            type="com.example.dai_pc.android_test.entity.Resource" />
    </data>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:fitsSystemWindows="true">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/root_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/page_padding">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/addressReceiveTitle"
                style="@style/TextTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/address_receive"
                app:layout_constraintTop_toTopOf="parent" />

            <android.support.v7.widget.LinearLayoutCompat
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10dp"
                android:layout_marginTop="@dimen/_5dp"
                android:background="@drawable/bg_edt_app"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/addressReceiveTitle">

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/txt_address"
                    style="@style/EditTextApp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:maxLines="1" />

                <View
                    android:layout_width="@dimen/_.5dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/_2dp"
                    android:layout_marginLeft="@dimen/_.5dp"
                    android:layout_marginRight="@dimen/_.5dp"
                    android:layout_marginTop="@dimen/_2dp"
                    android:background="@color/colorPrimary" />

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/btnQRCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_5dp"
                    android:layout_marginRight="@dimen/_5dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    app:srcCompat="@drawable/ic_qr_code" />

            </android.support.v7.widget.LinearLayoutCompat>

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/amountTitle"
                style="@style/TextTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15dp"
                android:text="@string/amount"
                app:layout_constraintTop_toBottomOf="@+id/view" />

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/amount"
                style="@style/EditTextApp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10dp"
                android:layout_marginTop="@dimen/_5dp"
                android:inputType="number"
                android:textColorHint="@color/text_color_hint"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/balanceTitle"
                app:layout_constraintTop_toBottomOf="@+id/amountTitle" />


            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/balanceTitle"
                style="@style/TextAppStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10dp"
                android:text="Your balance: "
                android:textSize="@dimen/_13sp"
                app:layout_constraintBaseline_toBaselineOf="@+id/amount"
                app:layout_constraintLeft_toRightOf="@+id/amount"
                app:layout_constraintRight_toLeftOf="@+id/balance" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/balance"
                style="@style/TextAppStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--- ETH"
                android:textSize="@dimen/_13sp"
                app:layout_constraintBaseline_toBaselineOf="@+id/amount"
                app:layout_constraintLeft_toRightOf="@+id/balanceTitle"
                app:layout_constraintRight_toRightOf="parent" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btnSend"
                style="@style/ButtonApp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_30dp"
                android:backgroundTint="@color/colorPrimary"
                android:backgroundTintMode="multiply"
                android:text="@string/Send"
                app:layout_constraintTop_toBottomOf="@+id/expandView"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent" />

            <android.support.v7.widget.CardView
                android:id="@+id/cardView"
                android:layout_marginTop="@dimen/_10dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                app:cardElevation="@dimen/_5dp"
                app:cardUseCompatPadding="true"
                app:contentPadding="@dimen/_10dp"
                app:layout_constraintTop_toBottomOf="@+id/amount">

                <android.support.v7.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/option"
                        style="@style/TextAppStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/show_option" />
                    <android.support.v7.widget.AppCompatImageView
                        android:src="@drawable/ic_right_arrow"
                        android:layout_marginLeft="@dimen/_10dp"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/iconRotate"
                        android:layout_width="@dimen/_25dp"
                        android:layout_height="@dimen/_25dp" />

                </android.support.v7.widget.LinearLayoutCompat>
            </android.support.v7.widget.CardView>
            <net.cachapa.expandablelayout.ExpandableLayout
                app:el_duration="500"
                app:el_expanded="false"
                app:layout_constraintTop_toBottomOf="@+id/cardView"
                android:id="@+id/expandView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/gasPriceTitle"
                        style="@style/TextTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_15dp"
                        android:text="@string/gasPrice"
                        app:layout_constraintTop_toTopOf="parent" />

                    <android.support.v7.widget.AppCompatEditText
                        android:id="@+id/gasPrice"
                        style="@style/EditTextApp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10dp"
                        android:layout_marginTop="@dimen/_5dp"
                        android:inputType="number"
                        android:textColorHint="@color/text_color_hint"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/gasPriceTitle"
                  />
                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/gasLimitTitle"
                        style="@style/TextTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_15dp"
                        android:text="@string/gasLimit"
                        app:layout_constraintTop_toBottomOf="@+id/gasPrice" />

                    <android.support.v7.widget.AppCompatEditText
                        android:id="@+id/gaslimit"
                        style="@style/EditTextApp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10dp"
                        android:layout_marginTop="@dimen/_5dp"
                        android:inputType="number"
                        android:textColorHint="@color/text_color_hint"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/gasLimitTitle"
                        />
                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/nonceTitle"
                        style="@style/TextTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_15dp"
                        android:text="@string/nonce"
                        app:layout_constraintTop_toBottomOf="@+id/gaslimit" />

                    <android.support.v7.widget.AppCompatEditText
                        android:id="@+id/nonce"
                        style="@style/EditTextApp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10dp"
                        android:layout_marginTop="@dimen/_5dp"
                        android:inputType="number"
                        android:textColorHint="@color/text_color_hint"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/nonceTitle"
                        />

                </android.support.constraint.ConstraintLayout>
            </net.cachapa.expandablelayout.ExpandableLayout>
            <include
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:id="@+id/loadingLayout"
                app:resource="@{resource}"
                layout="@layout/loading_layout" />
        </android.support.constraint.ConstraintLayout>
    </android.support.v4.widget.NestedScrollView>
</layout>
