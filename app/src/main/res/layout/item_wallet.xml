<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <android.support.v7.widget.CardView
        app:cardElevation="@dimen/_5dp"
        app:cardUseCompatPadding="true"
        app:contentPadding="@dimen/_5dp"
        android:forceHasOverlappingRendering="true"
        app:cardBackgroundColor="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:paddingBottom="@dimen/_8dp"
            android:paddingLeft="@dimen/_8dp"
            android:paddingTop="@dimen/_8dp">

            <de.hdodenhof.circleimageview.CircleImageView
                app:layout_constraintTop_toBottomOf="parent"
                android:id="@+id/iconAccount"
                android:layout_width="@dimen/_35dp"
                android:layout_height="@dimen/_35dp"
                app:civ_border_color="@color/white"
                app:civ_border_overlay="true"
                app:civ_border_width="@dimen/_1dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/txtWallet"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@drawable/ic_account" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/txtWallet"
                style="@style/TextAppStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_8dp"
                android:textSize="@dimen/_17sp"
                app:layout_constraintLeft_toRightOf="@+id/iconAccount"
                app:layout_constraintRight_toLeftOf="@+id/iconDropDown"
                tools:text="0x9d60B3DE126D0cb84721956Be9AE4838BFA01211" />

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/iconDropDown"
                android:layout_width="@dimen/_32dp"
                android:layout_height="match_parent"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:paddingLeft="@dimen/_8dp"
                android:paddingRight="@dimen/_8dp"
                android:paddingTop="@dimen/_8dp"
                android:src="@drawable/ic_drop_down"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/txtWallet"
                app:layout_constraintRight_toRightOf="parent" />
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</layout>