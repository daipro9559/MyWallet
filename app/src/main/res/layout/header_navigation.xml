<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_180dp"
        android:minHeight="@dimen/min_height_header_navi"
        android:padding="@dimen/padding_header_navi"
        android:background="@color/colorPrimary">
        <android.support.v7.widget.AppCompatImageView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/imgIcon"
            android:src="@drawable/ic_stellar"
            android:layout_width="@dimen/_80dp"
            android:layout_height="@dimen/_80dp" />
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/txtPlatform"
            app:layout_constraintTop_toTopOf="@+id/imgIcon"
            app:layout_constraintBottom_toBottomOf="@+id/imgIcon"
            app:layout_constraintLeft_toRightOf="@+id/imgIcon"
            style="@style/MyTextTitle"
            android:text="Stellar Platform"
            android:layout_width="wrap_content"
            app:layout_constraintVertical_bias="0.35"
            android:layout_marginLeft="@dimen/_10dp"
            android:layout_height="wrap_content" />
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/txtNetwork"
            app:layout_constraintTop_toBottomOf="@+id/txtPlatform"
            app:layout_constraintLeft_toLeftOf="@+id/txtPlatform"
            app:layout_constraintRight_toRightOf="@+id/txtPlatform"
            style="@style/MyTextTitle"
            android:textSize="@dimen/_14sp"
            android:text="Main net"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </android.support.constraint.ConstraintLayout>
</layout>