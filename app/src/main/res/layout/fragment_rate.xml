<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>

    </data>
<android.support.constraint.ConstraintLayout
    android:padding="@dimen/page_padding"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.AppCompatTextView
        android:textSize="@dimen/_15sp"
        style="@style/TextAppStyle"
        android:id="@+id/currentPriceTitle"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="@string/current_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.AppCompatTextView
        android:textSize="@dimen/_25sp"
        android:layout_marginTop="@dimen/_5dp"
        style="@style/TextAppStyle"
        android:id="@+id/txtPriceUSD"
        app:layout_constraintTop_toBottomOf="@+id/currentPriceTitle"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="........"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <android.support.v7.widget.AppCompatTextView
        android:textSize="@dimen/_25sp"
        android:layout_marginTop="@dimen/_5dp"
        style="@style/TextAppStyle"
        android:id="@+id/txtPriceBTC"
        app:layout_constraintTop_toBottomOf="@+id/txtPriceUSD"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</android.support.constraint.ConstraintLayout>
</layout>
