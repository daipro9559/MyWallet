<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="resource"
            type="com.example.dai_pc.android_test.entity.Resource" />
    </data>

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/page_padding">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/address_title"
            style="@style/TextAppStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Send to:"
            android:textSize="@dimen/_19sp"
            app:layout_constraintTop_toTopOf="parent" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/txt_address_target"
            style="@style/TextAppStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:textColor="@color/colorPrimary"
            app:layout_constraintTop_toBottomOf="@+id/address_title"
            tools:text="0xCB2dA90c7A6660BB196fCc652b1bA2C1BfFeF9f0" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/amount_title"
            style="@style/TextAppStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5dp"
            android:text="Amount"
            android:textAlignment="center"
            android:textColor="@android:color/darker_gray"
            android:textSize="@dimen/_19sp"
            app:layout_constraintTop_toBottomOf="@+id/txt_address_target" />

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/amount"
            style="@style/EditTextApp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5dp"
            android:gravity="center_horizontal"
            android:textAlignment="center"
            android:textColorHint="@color/text_color_hint"
            app:layout_constraintTop_toBottomOf="@id/amount_title"></android.support.v7.widget.AppCompatEditText>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btnSend"
            style="@style/ButtonApp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_30dp"
            android:backgroundTint="@color/colorPrimary"
            android:backgroundTintMode="multiply"
            android:text="@string/Send"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/amount" />

        <include
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/loadingLayout"
            app:resource="@{resource}"
            layout="@layout/loading_layout" />
    </android.support.constraint.ConstraintLayout>
</layout>
