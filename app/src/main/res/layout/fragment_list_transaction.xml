<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <import type="com.example.dai_pc.android_test.entity.Resource.Status" />

        <variable
            name="resource"
            type="com.example.dai_pc.android_test.entity.Resource" />
    </data>

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.constraint.ConstraintLayout
                android:id="@+id/constrainLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/iconAccount"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_width="@dimen/_30dp"
                    android:layout_height="@dimen/_30dp" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/txtAccount"
                    style="@style/MyTextTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="marquee"
                    android:padding="@dimen/_5dp"
                    android:singleLine="true"
                    app:layout_constraintRight_toRightOf="parent"
                    android:text="0x9d60b3de126d0cb84721956be9ae4838bfa01211"
                    android:textAlignment="center"
                    app:layout_constraintLeft_toRightOf="@+id/iconAccount"
                    app:layout_constraintTop_toTopOf="parent" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/txtBalanceTitle"
                    style="@style/MyTextTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_5dp"
                    android:text="@string/balance"
                    android:textAlignment="center"
                    app:layout_constraintTop_toBottomOf="@+id/txtAccount" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/txtBalance"
                    style="@style/MyTextTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    android:padding="@dimen/_5dp"
                    android:text="... ETH"
                    android:textAlignment="center"
                    android:textSize="@dimen/_18sp"
                    app:layout_constraintTop_toBottomOf="@+id/txtBalanceTitle" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/txtBalanceUSD"
                    style="@style/MyTextTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    android:padding="@dimen/_5dp"
                    android:text="... USD"
                    android:textAlignment="center"
                    android:textSize="@dimen/_18sp"
                    app:layout_constraintTop_toBottomOf="@+id/txtBalance" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/txtTransactions"
                    style="@style/MyTextTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_5dp"
                    android:text="@string/transactions"
                    android:textAlignment="center"
                    app:layout_constraintTop_toBottomOf="@+id/txtBalanceUSD" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycleView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/txtTransactions"
                    tools:listitem="@layout/item_transaction"></android.support.v7.widget.RecyclerView>
            </android.support.constraint.ConstraintLayout>
        </android.support.v4.widget.NestedScrollView>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/floatButton"
            style="@style/FloatButton.Style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="@dimen/_10dp"
            android:src="@drawable/ic_send"
            app:backgroundTint="@color/colorPrimary"
            app:backgroundTintMode="src_over"
            app:borderWidth="@dimen/_1dp"
            app:elevation="@dimen/_10dp"
            app:layout_anchor="@+id/scrollView"
            app:layout_anchorGravity="right|bottom" />

        <include
            android:id="@+id/layoutLoading"
            layout="@layout/loading_layout"
            app:resource="@{resource}"
            tools:visibility="gone" />

        <android.support.constraint.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="@{resource.status == Status.ERROR ? View.VISIBLE : View.GONE }"
            tools:visibility="gone">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/icon"
                android:layout_width="@dimen/_50dp"
                android:layout_height="@dimen/_50dp"
                android:src="@drawable/ic_sad"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent" />

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5dp"
                android:text="@{resource.messError}"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/icon" />
        </android.support.constraint.ConstraintLayout>

    </android.support.design.widget.CoordinatorLayout>
</layout>