<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>
        <import type="com.example.dai_pc.android_test.entity.Resource.Status"/>
        <variable
            name="resource"
            type="com.example.dai_pc.android_test.entity.Resource"/>
    </data>

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/constrainLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.v7.widget.RecyclerView
                tools:listitem="@layout/item_transaction"
                app:layoutManager="android.support.v7.widget.LinearLayoutManager"
                android:id="@+id/recycleView"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </android.support.v7.widget.RecyclerView>
        </android.support.constraint.ConstraintLayout>

        <android.support.design.widget.FloatingActionButton
            app:elevation="@dimen/_10dp"
            android:elevation="@dimen/_10dp"
            style="@style/FloatButton.Style"
            app:borderWidth="@dimen/_1dp"
            android:id="@+id/floatButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_send"
            app:backgroundTintMode="src_over"
            app:layout_anchor="@+id/constrainLayout"
            app:layout_anchorGravity="right|bottom"
            app:backgroundTint="@color/colorPrimary"
            />
        <include
            android:id="@+id/layoutLoading"
            layout="@layout/loading_layout"
            app:resource="@{resource}"
            />
        <android.support.constraint.ConstraintLayout
            android:layout_gravity="center"
            android:visibility="@{resource.status == Status.ERROR ? View.VISIBLE : View.GONE }"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <android.support.v7.widget.AppCompatImageView
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:id="@+id/icon"
                android:src="@drawable/ic_sad"
                android:layout_width="@dimen/_50dp"
                android:layout_height="@dimen/_50dp" />
            <android.support.v7.widget.AppCompatTextView
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="@dimen/_5dp"
                app:layout_constraintTop_toBottomOf="@+id/icon"
                android:text ="@{resource.messError}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </android.support.constraint.ConstraintLayout>
    </android.support.design.widget.CoordinatorLayout>
</layout>