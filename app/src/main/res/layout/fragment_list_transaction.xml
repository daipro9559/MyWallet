<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <import type="com.example.dai_pc.android_test.entity.Resource.Status" />

        <variable
            name="resource"
            type="com.example.dai_pc.android_test.entity.Resource" />
    </data>

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.constraint.ConstraintLayout
                android:id="@+id/constrainLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="@dimen/_10dp">

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/txtAccountTitle"
                    style="@style/MyTextTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_5dp"
                    android:text="@string/account"
                    android:textAlignment="center"
                    app:layout_constraintTop_toTopOf="parent" />

                <android.support.v7.widget.LinearLayoutCompat
                    android:id="@+id/view1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    android:orientation="horizontal"
                    android:padding="@dimen/_5dp"
                    app:layout_constraintTop_toBottomOf="@+id/txtAccountTitle">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/iconAccount"
                        android:layout_width="@dimen/_35dp"
                        android:layout_height="@dimen/_35dp"
                        app:civ_border_color="@color/white"
                        app:civ_border_overlay="true"
                        app:civ_border_width="@dimen/_1dp" />

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/txtAccount"
                        style="@style/TextAppStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="marquee"
                        android:padding="@dimen/_5dp"
                        android:singleLine="true"
                        android:textAlignment="center" />
                </android.support.v7.widget.LinearLayoutCompat>

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/txtBalanceTitle"
                    style="@style/MyTextTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_5dp"
                    android:text="@string/balance"
                    android:textAlignment="center"
                    app:layout_constraintTop_toBottomOf="@+id/view1" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/txtBalance"
                    style="@style/MyTextTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    android:padding="@dimen/_5dp"
                    android:text="... ETH"
                    android:textAlignment="center"
                    android:textSize="@dimen/_20sp"
                    app:layout_constraintTop_toBottomOf="@+id/txtBalanceTitle" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/txtBalanceUSD"
                    style="@style/MyTextTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    android:padding="@dimen/_5dp"
                    android:text="... USD"
                    android:textAlignment="center"
                    android:textSize="@dimen/_18sp"
                    app:layout_constraintTop_toBottomOf="@+id/txtBalance" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/txtTransactions"
                    style="@style/MyTextTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_5dp"
                    android:text="@string/transactions_history"
                    android:textAlignment="center"
                    app:layout_constraintTop_toBottomOf="@+id/txtBalanceUSD" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycleView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/txtTransactions"
                    tools:listitem="@layout/item_transaction"></android.support.v7.widget.RecyclerView>
            </android.support.constraint.ConstraintLayout>
        </android.support.v4.widget.NestedScrollView>

        <com.github.clans.fab.FloatingActionMenu
            android:id="@+id/fabMenu"
            style="@style/FloatButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:elevation="@dimen/_10dp"
            app:layout_anchor="@+id/scrollView"
            app:layout_anchorGravity="bottom|right"
            app:menu_colorNormal="@color/colorPrimary"
            app:menu_colorPressed="@color/colorWindowsBackground"
            app:menu_colorRipple="#cf969393"
            app:menu_fab_size="normal"
            app:menu_labels_colorNormal="@color/colorPrimary"
            app:menu_labels_colorPressed="@color/colorPressFloatButton"
            app:menu_labels_colorRipple="@color/colorRippleFloatButton"
            app:menu_labels_cornerRadius="@dimen/_3dp"
            app:menu_labels_ellipsize="marquee"
            app:menu_labels_position="left"
            app:menu_labels_showShadow="true"
            app:menu_labels_singleLine="true"
            app:menu_labels_textColor="@color/white"
            app:menu_labels_textSize="@dimen/_14sp">

            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/buttonSend"
                style="@style/FloatButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_send_1"
                app:fab_label="@string/Send"
                />
            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/buttonReceive"
                style="@style/FloatButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_dollar"
                app:fab_label="@string/receive"
                />

        </com.github.clans.fab.FloatingActionMenu>

        <!--<android.support.design.widget.FloatingActionButton-->
        <!--android:id="@+id/floatButton"-->
        <!--style="@style/FloatButton.Style"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:src="@drawable/ic_send"-->
        <!--app:backgroundTint="@color/colorPrimary"-->
        <!--app:backgroundTintMode="src_over"-->
        <!--app:borderWidth="@dimen/_1dp"-->
        <!--app:elevation="@dimen/_10dp"-->
        <!--app:layout_anchor="@+id/scrollView"-->
        <!--app:layout_anchorGravity="right|bottom" />-->

        <include
            android:id="@+id/layoutLoading"
            layout="@layout/loading_layout"
            app:resource="@{resource}"
            tools:visibility="gone" />

        <android.support.constraint.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="@{resource.status == Status.ERROR ? View.VISIBLE : View.GONE }"
            tools:visibility="gone">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/icon"
                android:layout_width="@dimen/_50dp"
                android:layout_height="@dimen/_50dp"
                android:src="@drawable/ic_sad"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent" />

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5dp"
                android:text="@{resource.messError}"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/icon" />
        </android.support.constraint.ConstraintLayout>

    </android.support.design.widget.CoordinatorLayout>
</layout>