<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="resource"
            type="com.example.dai_pc.android_test.entity.Resource"/>
    </data>

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <include
            android:id="@+id/toolbarLayout"
            layout="@layout/toolbar_layout" />

        <android.support.v4.widget.NestedScrollView
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:id="@+id/viewRoot"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
               >

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/keystore"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20dp"
                    app:layout_constraintTop_toTopOf="parent">

                    <android.support.design.widget.TextInputEditText
                        android:imeOptions="actionNext"
                        android:id="@+id/edt_keystore"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/keystore" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/exportPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20dp"
                    app:layout_constraintTop_toBottomOf="@+id/keystore">

                    <android.support.design.widget.TextInputEditText
                        android:imeOptions="actionNext"
                        android:id="@+id/edtExportPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/password_export"
                        android:inputType="textPassword" />
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/newPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20dp"
                    app:layout_constraintTop_toBottomOf="@+id/exportPassword">

                    <android.support.design.widget.TextInputEditText
                        android:imeOptions="actionDone"
                        android:id="@+id/edtNewPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/new_password_wallet"
                        android:inputType="textPassword" />
                </android.support.design.widget.TextInputLayout>
            </android.support.constraint.ConstraintLayout>
        </android.support.v4.widget.NestedScrollView>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/btn_import"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:src="@drawable/ic_tick"
            app:backgroundTintMode="src_over"
            app:borderWidth="1dp"
            app:fabSize="auto"
            app:layout_anchor="@+id/viewRoot"
            app:layout_anchorGravity="bottom|right"
            app:useCompatPadding="true" />
        <include layout="@layout/loading_layout"
            app:resource="@{resource}"
            android:id="@+id/loadingLayout"
            tools:visibility="gone"/>
    </android.support.design.widget.CoordinatorLayout>

</layout>