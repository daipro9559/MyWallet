<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data></data>
    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v4.widget.NestedScrollView
            android:id="@+id/view_root"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <android.support.constraint.ConstraintLayout
        android:paddingBottom="@dimen/_10dp"
        android:id="@+id/constrainLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/imgBarcode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10dp" />
        <android.support.v7.widget.AppCompatTextView
            android:textIsSelectable="true"
            android:padding="@dimen/_10dp"
            android:id="@+id/txtAddress"
            style="@style/TextAppStyle"
            app:layout_constraintTop_toBottomOf="@+id/imgBarcode"
            android:textSize="@dimen/_19sp"
            android:textColor="@color/text_color_app"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_copy"
            style="@style/ButtonApp"
            android:background="@color/colorPrimary"
            android:text="@string/copy_to_clipboard"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtAddress"
            android:layout_marginTop="@dimen/_10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_export"
            style="@style/ButtonApp"
            android:background="@color/colorPrimary"
            android:text="@string/export_wallet"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_copy"
            android:layout_marginTop="@dimen/_10dp"
            android:layout_marginBottom="@dimen/_10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </android.support.constraint.ConstraintLayout>
        </android.support.v4.widget.NestedScrollView>
        <android.support.design.widget.FloatingActionButton
            style="@style/FloatButton.Style"
            app:backgroundTint="@color/colorPrimary"
            android:id="@+id/floatButton_add"
            app:layout_anchor="@+id/view_root"
            android:src="@drawable/ic_plus"
            app:borderWidth="0dp"
            app:backgroundTintMode="src_over"
            app:layout_anchorGravity="bottom|right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </android.support.design.widget.CoordinatorLayout>
</layout>