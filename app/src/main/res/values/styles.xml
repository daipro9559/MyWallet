<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/white</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="preferenceTheme">@style/App.Preference</item>
        <item name="android:windowBackground">@color/colorWindowsBackground</item>
        <item name="android:alertDialogStyle">@style/MyAlertDialogStyle</item>
    </style>
    <style name="MyAlertDialogStyle" parent="AlertDialog.AppCompat">
        <item name="android:textColor">@color/white</item>
        <item name="android:windowBackground">@color/colorWindowsBackground</item>
    </style>

    <style name="MyProgressBar" parent="@style/Widget.AppCompat.ProgressBar">
        <item name="colorAccent">@color/white</item>
    </style>


    <style name="MainActivityTheme" parent="AppTheme">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="ActivitySetting" parent="AppTheme">
    </style>

    <style name="App.Preference" parent="@style/PreferenceThemeOverlay.v14.Material"></style>

    <style name="Splash.Activity" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="wallethActionBarThemeOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <!-- title text color -->
        <item name="android:textColorPrimary">@android:color/white</item>
        <!-- subtitle text color -->
        <item name="android:textColorSecondary">?android:textColorPrimary</item>
        <!-- action menu item text color -->
        <item name="actionMenuTextColor">?android:textColorPrimary</item>
        <!-- action menu item icon color -->
        <item name="colorControlNormal">?android:textColorPrimary</item>

        <item name="colorControlHighlight">?android:textColorPrimary</item>
        <item name="android:textColorHint">?android:textColorPrimary</item>
        <item name="android:editTextColor">?android:textColorPrimary</item>
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="colorAccent">@android:color/transparent</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/white</item>
    </style>

    <style name="TextToolbar" parent="TextAppStyle">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="EditTextApp" parent="Base.V7.Widget.AppCompat.EditText">
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/text_size_app</item>
        <item name="android:textColor">@color/text_color_app</item>
        <item name="android:paddingLeft">@dimen/_10dp</item>
        <item name="android:paddingRight">@dimen/_10dp</item>
        <item name="android:paddingTop">@dimen/_10dp</item>
        <item name="android:paddingBottom">@dimen/_10dp</item>
        <item name="android:textCursorDrawable">@color/colorPrimary</item>
        <item name="android:background">@drawable/bg_edt_app</item>
    </style>

    <style name="ButtonApp" parent="Base.Widget.AppCompat.Button.Colored">
        <item name="android:minWidth">@dimen/_150dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingTop">@dimen/_5dp</item>
        <item name="android:paddingBottom">@dimen/_5dp</item>
        <item name="android:paddingLeft">@dimen/_20dp</item>
        <item name="android:paddingRight">@dimen/_20dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/bg_button_app</item>
        <item name="android:colorControlHighlight">@color/color_control_high_light</item>

    </style>

    <style name="TextAppStyle" parent="TextAppearance.AppCompat.Small.Inverse">
        <item name="android:textSize">@dimen/text_size_app</item>
        <item name="android:textColor">@color/text_color_app</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="FloatButton.Style" parent="Widget.Design.FloatingActionButton">
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:scaleType">center</item>
        <item name="useCompatPadding">true</item>
        <item name="fabSize">auto</item>
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="backgroundTintMode">src_over</item>
        <item name="borderWidth">@dimen/_1dp</item>
        <item name="elevation">@dimen/_10dp</item>
    </style>

    <style name="FloatButtonStyle">
        <item name="android:layout_marginBottom">@dimen/_5dp</item>
        <item name="android:layout_marginRight">@dimen/_5dp</item>
        <item name="fab_size">mini</item>
        <item name="fab_colorNormal">@color/colorPrimary</item>
        <item name="fab_colorPressed">@color/colorPressFloatButton</item>
        <item name="fab_colorRipple">@color/colorRippleFloatButton</item>

    </style>

    <style name="LabelFloatButtonStyle">
        <item name="menu_labels_textSize">@dimen/_14sp</item>
        <item name="menu_labels_colorNormal">@color/colorPrimary</item>
        <item name="menu_labels_colorPressed">@color/colorPressFloatButton</item>
        <item name="menu_labels_colorRipple">@color/colorRippleFloatButton</item>
        <item name="menu_labels_cornerRadius">@dimen/_3dp</item>
        <item name="menu_labels_ellipsize">marquee</item>
        <item name="menu_labels_position">left</item>
        <item name="menu_labels_showShadow">true</item>
        <item name="menu_labels_singleLine">true</item>
        <item name="menu_labels_textColor">@color/white</item>
    </style>

    <style name="DialogApp" parent="@style/AlertDialog.AppCompat.Light">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Display2</item>
    </style>

    <style name="BottomDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowCloseOnTouchOutside">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.3</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="TextTab" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
    </style>

    <style name="TextTitle" parent="TextAppStyle">
        <item name="android:layout_marginLeft">@dimen/_5dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_14sp</item>
        <item name="android:textColor">@color/txt_color_title</item>
    </style>

    <style name="TextContent" parent="TextAppStyle">
        <item name="android:layout_marginLeft">@dimen/_10dp</item>
        <item name="android:textSize">@dimen/_17sp</item>
        <item name="android:textColor">@color/txt_color_content</item>
    </style>

    <style name="MyTextTitle" parent="TextAppStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_20sp</item>
    </style>

    <dimen name="_3dp">3dp</dimen>
</resources>
